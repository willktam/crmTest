<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<document name="ChangePassword"
				xmlns="http://www.skyve.org/xml/document"
				xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<singularAlias>Change Password</singularAlias>
	<pluralAlias>Change Passwords</pluralAlias>
	<audited>false</audited>
	<iconStyleClass>fa fa-unlock-alt</iconStyleClass>
	<attributes>
		<text name="oldPassword">
			<documentation>
				<![CDATA[
					The old password is not always required to change the password as the
					self service reset password function cannot demand the user for their old password.
				]]>
			</documentation>
			<displayName>Old Password</displayName>
			<description>Enter your old password</description>
			<length>50</length>
		</text>
		<text name="newPassword" required="true">
			<displayName>New Password</displayName>
			<description>Enter your new password</description>
			<length>50</length>
		</text>
		<text name="confirmPassword" required="true">
			<displayName>Confirm Password</displayName>
			<description>Re-enter your new password</description>
			<length>50</length>
		</text>
		<text name="response">
			<displayName>Response</displayName>
			<length>200</length>
		</text>
	</attributes>
</document>
