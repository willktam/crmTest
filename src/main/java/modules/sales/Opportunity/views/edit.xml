<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="Opportunity" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <tabPane>
    	<tab title="Summary">
    		<form responsiveWidth="12" percentageWidth="60" border="true">
		        <column percentageWidth="30" responsiveWidth="4"/>
		        <column/>
		        <row>
		            <item>
		                <default binding="topic"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="contact"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="account"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="description"/>
		            </item>
		        </row>
		    </form>
    	</tab>
    	<tab title="Product Details">
    		<form responsiveWidth="12" percentageWidth="60" border="true">
		        <column percentageWidth="30" responsiveWidth="4"/>
		        <column/>
		        <row>
		            <item>
		                <default binding="product"/>
		            </item>
		        </row>
		    </form>
    	</tab>
    </tabPane>
    
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>
