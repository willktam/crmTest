<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_orderSummary" title="Order Summary" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form border="true" borderTitle="Order Summary">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item>
        		<textField binding="order.bizKey" visible="orderSelected"/>
        	</item>
        </row>
       	<row>
       		<item>
       			<textField binding="order.name" visible="orderSelected"/>
       		</item>
       	</row>
         <row>
         	<item>
         		<textField binding="order.requested" visible="orderSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="order.fulfilled" visible="orderSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="order.opportunity.total" visible="orderSelected"/>
         	</item>
         </row>
    </form>
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>