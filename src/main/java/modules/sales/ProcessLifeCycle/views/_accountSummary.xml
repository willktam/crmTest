<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_accountSummary" title="Account Summary" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form border="true" borderTitle="Account Summary">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item>
        		<textField binding="account.bizKey" visible="accountSelected"/>
        	</item>
        </row>
       	<row>
       		<item>
       			<textField binding="account.accountName" visible="accountSelected"/>
       		</item>
       	</row>
         <row>
         	<item>
         		<textField binding="account.email" visible="accountSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="account.relationshipType" visible="accountSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="account.primaryContact.bizKey" visible="accountSelected"/>
         	</item>
         </row>
    </form>
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>