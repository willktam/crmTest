<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_invoiceSummary" title="Invoice Summary" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form border="true" borderTitle="Invoice Summary">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item>
        		<textField binding="invoice.bizKey" visible="invoiceSelected"/>
        	</item>
        </row>
       	<row>
       		<item>
       			<textField binding="invoice.name" visible="invoiceSelected"/>
       		</item>
       	</row>
         <row>
         	<item>
         		<textField binding="invoice.order.bizKey" visible="invoiceSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="invoice.invoiceStatus" visible="invoiceSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="invoice.order.opportunity.total" visible="invoiceSelected"/>
         	</item>
         </row>
    </form>
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>