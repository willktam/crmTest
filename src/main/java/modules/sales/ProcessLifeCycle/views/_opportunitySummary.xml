<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_opportunitySummary" title="Opportunity Summary" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form border="true" borderTitle="Opportunity Summary">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item showLabel="true" label="Opportunity">
        		<blurb visible="opportunitySelected">{opportunity.bizKey}</blurb>
        	</item>
        </row>
       	<row>
       		<item showLabel="true" label="Topic">
       			<blurb visible="opportunitySelected">{opportunity.topic}</blurb>
       		</item>
       	</row>
         <row>
         	<item showLabel="true" label="Product Info">
         		<blurb visible="opportunitySelected">{opportunity.product.bizKey}</blurb>
         	</item>
         </row>
         <row>
         	<item showLabel="true" label="Product Price List">
         		<blurb visible="opportunitySelected">{opportunity.priceList.bizKey}</blurb>
         	</item>
         </row>
         <row>
         	<item showLabel="true" label="Account">
         		<blurb visible="opportunitySelected">{opportunity.account.bizKey}</blurb>
         	</item>
         </row>
    </form>
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>