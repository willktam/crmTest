<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_quoteSummary" title="Quote Summary" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form border="true" borderTitle="Quote Summary">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item>
        		<textField binding="quote.bizKey" visible="quoteSelected"/>
        	</item>
        </row>
       	<row>
       		<item>
       			<textField binding="quote.name" visible="quoteSelected"/>
       		</item>
       	</row>
         <row>
         	<item>
         		<textField binding="quote.expireDate" visible="quoteSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="quote.status" visible="quoteSelected"/>
         	</item>
         </row>
         <row>
         	<item>
         		<textField binding="quote.statusReason" visible="quoteSelected"/>
         	</item>
         </row>
    </form>
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>