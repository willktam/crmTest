<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_quoteSummary" title="Quote Summary" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form border="true" borderTitle="Quote Summary">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item showLabel="true" label="Quote">
        		<blurb visible="quoteSelected">{quote.bizKey}</blurb>
        	</item>
        </row>
       	<row>
       		<item showLabel="true" label="Quote Name">
       			<blurb visible="quoteSelected">{quote.name}</blurb>
       		</item>
       	</row>
         <row>
         	<item showLabel="true" label="Quote Expire Date">
         		<blurb visible="quoteSelected">{quote.expireDate}</blurb>
         	</item>
         </row>
         <row>
         	<item showLabel="true" label="Quote Status">
         		<blurb visible="quoteSelected">{quote.status.field}</blurb>
         	</item>
         </row>
         <row>
         	<item showLabel="true" label="Status Reason">
         		<blurb visible="quoteSelected">{quote.statusReason}</blurb>
         	</item>
         </row>
    </form>
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>