<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="Invoice" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <tabPane>
    	<tab title="Invoice Summary">
    		<component name="_invoiceSummary" />
    	</tab>
    	<tab title="Shipping Details">
    		<component name="_invoiceShipping" />
    	</tab>
    	<tab title="Product and Pricing Details">
    		<hbox border="true">
    			<vbox responsiveWidth="6" percentageWidth="50">
    				<component name="_invoiceProduct" />
    			</vbox>
    			<vbox responsiveWidth="6" percentageWidth="50">
    				<component name="_invoicePricing" />
    			</vbox>
    		</hbox>
    	</tab>
    </tabPane>
    
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>
