<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_addressDetails" title="Address Details" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
	<form border="true" borderTitle="Address Details">
        <column percentageWidth="60" responsiveWidth="6"/>
        
		<row>
            <item>
                <default binding="street"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="city"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="state"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="postCode"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="country"/>
            </item>
        </row>
	</form>
</view>