<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="Contact Details" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <tabPane>
    	<tab title="Summary">
			<vbox responsiveWidth="7" percentageWidth="70">
				<component name="_contactDetails" />
				<component name="_addressDetails" />
			</vbox>	
    	</tab>
    	<tab title="Interactions">
    		
    		<vbox border="true" borderTitle="Interactions">
				<!-- <listRepeater query="qInteractions" />-->
				<dataGrid binding="interactions" >
					<boundColumn binding="title" />
					<boundColumn binding="user.contact.name" />
					<boundColumn binding="description" />
					<boundColumn binding="type" />
					<boundColumn binding="interactionTime" />
				</dataGrid>
			</vbox>
			
    	</tab>
    </tabPane>
    
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>
