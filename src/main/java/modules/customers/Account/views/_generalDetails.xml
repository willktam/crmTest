<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_generalDetails" title="General Details" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
	<form border="true" borderTitle="Account Details">
        <column percentageWidth="30" responsiveWidth="4"/>
        <column/>
        <row>
        	<item showLabel="true" label="Account Manager">
        		<blurb><![CDATA[{accountManager}]]></blurb>
        	</item>
        </row>
        <row>
            <item>
                <default binding="accountName"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="email"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="website"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="phone"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="fax"/>
            </item>
        </row>
        <row>
            <item>
                <radio binding="relationshipType">
                    <onFocusHandlers/>
                    <onBlurHandlers/>
                    <onChangedHandlers/>
                </radio>
            </item>
        </row>
        <row>
            <item>
                <default binding="startDate"/>
            </item>
        </row>

    </form>
</view>