<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://www.skyve.org/xml/document" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="ContactDetails" xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd">
    <persistent name="CUS_ContactDetails"/>
    <singularAlias>Contact Details</singularAlias>
    <pluralAlias>Contact Details</pluralAlias>
    <iconStyleClass>fa fa-users</iconStyleClass>
    <bizKey expression="Contact Details - {lastName}"/>
    <attributes>
    	<!-- Contact Attributes -->
        <text required="true" name="firstName">
            <displayName>First Name</displayName>
            <description><![CDATA[A customers first name]]></description>
            <length>200</length>
        </text>
        <text required="true" name="lastName">
        	<displayName>Last Name</displayName>
        	<description><![CDATA[A customers last name]]></description>
        	<length>200</length>
        </text>
        <text name="jobTitle">
			<displayName>Job Title</displayName>
			<description><![CDATA[A customers job title]]></description>
			<length>100</length>
		</text>
        
       
        <text name="email">
            <displayName>Email</displayName>
            <description><![CDATA[A customers email address]]></description>
            <length>300</length>
            <validator regularExpression="^[^@]+@[^@]+$" type="email"/>
        </text>
        <text name="mobileNumber">
            <displayName>Mobile Number</displayName>
            <description><![CDATA[A customers mobile number]]></description>
            <length>20</length>
        </text>
        <text name="businessNumber">
            <displayName>Business Number</displayName>
            <description><![CDATA[A customers business number]]></description>
            <length>20</length>
        </text>
        <text name="fax">
        	<displayName>Fax</displayName>
        	<description><![CDATA[The account fax number]]></description>
        	<length>20</length>
        </text>
        
        <!-- Address info -->
        <text name="street">
            <displayName>Street</displayName>
            <description><![CDATA[The customers street and number]]></description>
            <length>200</length>
        </text>
        <text name="city">
        	<displayName>City</displayName>
        	<description><![CDATA[The customers city]]></description>
        	<length>100</length>
        </text>
        <text name="state">
        	<displayName>State or Province</displayName>
        	<description><![CDATA[The customers state or province]]></description>
        	<length>100</length>
        </text>
        <text name="postCode">
        	<displayName>ZIP or Postal Code</displayName>
        	<description><![CDATA[The customers ZIP or postal code]]></description>
        	<length>10</length>
        </text>
        <text name="country">
        	<displayName>Country/Region</displayName>
        	<description><![CDATA[The customers country or region]]></description>
        	<length>100</length>
        </text>
        
        <!-- Timeline/History/Notes -->
        <!-- Time ordered collection of other document -->
    </attributes>
</document>