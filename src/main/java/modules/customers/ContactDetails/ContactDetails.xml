<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://www.skyve.org/xml/document" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="ContactDetails" xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd">
    <persistent name="CUS_ContactDetails"/>
    <singularAlias>Contact Details</singularAlias>
    <pluralAlias>Contact Details</pluralAlias>
    <iconStyleClass>fa fa-users</iconStyleClass>
    <bizKey expression="Contact Details - {name}"/>
    <attributes>
        <text required="true" name="name">
            <displayName>Name</displayName>
            <description><![CDATA[A customers name]]></description>
            <length>200</length>
        </text>
        <enum required="true" name="contactType">
            <displayName>Contact Type</displayName>
            <description><![CDATA[A customers contact type]]></description>
            <values>
                <value code="Person"/>
                <value code="Organisation"/>
            </values>
        </enum>
        <date name="dateOfBirth">
            <displayName>Date of Birth</displayName>
            <description><![CDATA[A customers date of birth]]></description>
        </date>
        <text required="true" name="address">
            <displayName>Address</displayName>
            <description><![CDATA[A customers physical address]]></description>
            <length>200</length>
        </text>
        <text required="true" name="email">
            <displayName>Email</displayName>
            <description><![CDATA[A customers email address]]></description>
            <length>300</length>
            <validator regularExpression="^[^@]+@[^@]+$" type="email"/>
        </text>
        <text name="mobileNumber">
            <displayName>Mobile Number</displayName>
            <description><![CDATA[A customers mobile number]]></description>
            <length>20</length>
        </text>
        <text name="workNumber">
            <displayName>Work Number</displayName>
            <description><![CDATA[A customers work number]]></description>
            <length>20</length>
        </text>
    </attributes>
</document>