<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://www.skyve.org/xml/document" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="ProductPriceList" xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd">
    <persistent name="PRO_ProductPriceList"/>
    <singularAlias>Product Price List</singularAlias>
    <pluralAlias>Product Price Lists</pluralAlias>
    <iconStyleClass>fa fa-dollar</iconStyleClass>
    <bizKey expression="{name}"/>
    <attributes>
    	<!-- Price List Details -->
        <text required="true" name="name">
            <displayName>Price List Name</displayName>
            <description><![CDATA[The price list name]]></description>
            <length>100</length>
        </text>
        <memo name="description">
            <displayName>Description</displayName>
            <description><![CDATA[A description of the price list]]></description>
        </memo>
        <longInteger required="true" name="retailPrice">
        	<displayName>Retail Price Per Unit</displayName>
        	<description><![CDATA[The retail price of the product]]></description>
        </longInteger>
        <longInteger required="true" name="bulkPrice">
        	<displayName>Bulk Price Per Unit</displayName>
        	<description><![CDATA[The retail price of the product]]></description>
        </longInteger>
        <date name="startDate">
        	<displayName>Start Date</displayName>
        	<description><![CDATA[The start date of the price list]]></description>
        </date>
        <date name="endDate">
        	<displayName>End Date</displayName>
        	<description><![CDATA[The end date of the price list]]></description>
        </date>
        <text name="currency">
            <displayName>Currency</displayName>
            <description><![CDATA[The currency used for this price list]]></description>
            <length>100</length>
        </text>
        	
    </attributes>
</document>