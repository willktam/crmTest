<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://www.skyve.org/xml/document" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Customer" xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd">
    <persistent name="CRM_Customer"/>
    <singularAlias>Customer</singularAlias>
    <pluralAlias>Customers</pluralAlias>
    <iconStyleClass>fa fa-users</iconStyleClass>
    <bizKey expression="Customer - {name}"/>
    <attributes>
        <text required="true" name="name">
            <displayName>Name</displayName>
            <description><![CDATA[Your name]]></description>
            <length>100</length>
        </text>
        <integer required="true" name="age">
            <displayName>Age</displayName>
            <description><![CDATA[Your Age]]></description>
        </integer>
        <text required="true" name="address">
            <displayName>Address</displayName>
            <description><![CDATA[Your physical address]]></description>
            <length>200</length>
        </text>
        <text required="true" name="email">
            <displayName>Email</displayName>
            <description><![CDATA[Your email address]]></description>
            <length>300</length>
        </text>
    </attributes>
</document>